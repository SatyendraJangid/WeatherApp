    <script>
        const day = document.getElementById('day');
        const today_date = document.getElementById('today_date');
         const getCurrDay = () => {
            const weekday = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];
            const currTime = new Date();
            let day = weekday[currTime.getDay()];
            return day;
        };
        const d = getCurrDay();
        day.innerText = d;
        const getCurrTime = () => {
            var currTime = new Date();
            var month = currTime.getMonth() + 1;
            var day = currTime.getDate();
            var year = currTime.getFullYear();

            const monthName = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sept", "Oct", "Nov", "Dec"];
            const d = new Date();
            let name = monthName[d.getMonth()];

            let hr = currTime.getHours();
            let min = currTime.getMinutes();

            let period = "AM";

            if (hr > 11) {
                period = "PM";
                if (hr > 12) hr -= 12;
            }
            if (min < 10) {
                min = "0" + min;
            }

            return `${name} ${day} | ${hr}:${min} ${period}`;
        };

        const month_d_time = getCurrTime();
        today_date.innerText = month_d_time;

    </script>

